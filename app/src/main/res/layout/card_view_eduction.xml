<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/card_view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view_radius">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/margin_layout_in_card">

            <TextView
                android:id="@+id/education_instituiton_text"
                android:text="I"
                android:textColor="@color/text_color"
                android:textSize="@dimen/education_institution_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/education_area_text"
                android:text="A"
                android:textColor="@color/text_color"
                android:textSize="@dimen/education_area_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/education_dates_text"
                android:text="D"
                android:textColor="@color/text_color"
                android:textSize="@dimen/education_dates_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/education_study_type_text"
                android:text="S"
                android:textColor="@color/text_color"
                android:textSize="@dimen/education_study_type_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/education_gpa_text"
                android:text="g"
                android:textColor="@color/text_color"
                android:textSize="@dimen/education_gpa_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>